<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#46000000" />
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />
            <size
                android:width="100dp"
                android:height="300dp" />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/darkAndroidBlue" />

            <size
                android:width="100dp"
                android:height="300dp" />
            <corners
                android:radius="5dp"
                />

        </shape>
    </item>
</layer-list>


