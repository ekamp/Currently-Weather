<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shapeShadow" />
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />
            <size
                android:width="70dp"
                android:height="100dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/darkAndroidRed" />
            <corners android:radius="10dp" />

            <size
                android:width="70dp"
                android:height="100dp" />
            <stroke
                android:width="1dp"
                android:color="@color/standardAndroidRed" />
        </shape>
    </item>
</layer-list>
