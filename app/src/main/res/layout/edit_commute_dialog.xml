<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/edit_commute_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="@string/edit_commute_message"
        android:textColor="@color/abc_secondary_text_material_light"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <EditText
        android:id="@+id/edit_commute_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_commute_message"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:cursorVisible="true"
        android:hint="@string/edit_commute_hint"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="#2E2E2E"
        android:textSize="@dimen/roboto_medium" />

    <Button
        android:id="@+id/edit_commute_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_commute_edittext"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="#00000000"
        android:text="@string/dialog_submit"
        android:textColor="@color/abc_secondary_text_material_light"
        android:textSize="@dimen/abc_text_size_medium_material" />
</RelativeLayout>